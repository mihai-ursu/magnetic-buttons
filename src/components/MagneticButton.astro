---
import { Icon } from "astro-icon/components";
---

<button class="button">
  <div class="button__filler"></div>
  <span class="button__text">
    <span class="button__text-inner">
      <Icon name="mdi:envelope-outline" class="button__icon" />
      Contact Us
    </span>
  </span>
</button>

<script>
  import buttonCtrl from "./js/button";

  const button: HTMLButtonElement | null = document.querySelector(".button");
  buttonCtrl(button);
</script>

<style>
  .button {
    position: relative;
    cursor: pointer;
    border-width: var(--button-stroke-width);
    border-color: var(--button-stroke);
    border-style: solid;
    color: var(--button-text);
    background: var(--button-bg);
    border-radius: var(--button-border-radius);
    padding: 2rem 5rem;
    font-size: 1.5rem;
    overflow: hidden;
  }

  .button:focus,
  .button--hover {
    outline: none;
    border-width: var(--button-stroke-width-hover);
    border-color: var(--button-stroke-hover);
  }

  .button--hover {
    color: var(--button-text-hover);
  }

  .button__filler {
    background: var(--button-filler);
    position: absolute;
    width: 150%;
    height: 200%;
    border-radius: 50%;
    top: -50%;
    left: -25%;
    transform: translate3d(0, 75%, 0);
  }

  .button__icon {
    width: 2rem;
    height: 2rem;
  }

  .button__text,
  .button__text-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    gap: 0.5rem;
    line-height: 1;
  }
</style>
